<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogMain"
    >
    <TextView style="@style/DialogText"
        android:text="@string/title_label"
        />
    <EditText style="@style/Wide"
        android:singleLine="false"
        android:gravity="top"
        android:id="@+id/session_title"
        />

    <TextView style="@style/DialogText"
        android:text="@string/tags_label"
        />
    <EditText style="@style/Wide"
        android:lines="2"
        android:singleLine="false"
        android:gravity="top"
        android:id="@+id/session_tags"
        />

    <TextView style="@style/DialogText"
        android:text="@string/description_label"
        />
    <EditText style="@style/Wide"
        android:lines="2"
        android:singleLine="false"
        android:gravity="top"
        android:id="@+id/session_description"
        />

    <Button style="@style/DialogButton"
        android:text="@string/start_session"
        android:id="@+id/start_session"
        />
    <Button style="@style/DialogLastButton"
        android:text="@string/cancel"
        android:id="@+id/cancel"
        />
</LinearLayout>