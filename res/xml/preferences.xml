<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:persistent="true"
        >
    <android.preference.Preference android:title="@string/profile"
                                   android:summary="@string/profile_summary"
                                   android:key="account"
            />

  <android.preference.Preference android:title="@string/external_devices"
                                 android:key="external_sensor"
          />

  <android.preference.CheckBoxPreference android:defaultValue="false"
      android:key="realtime_sessions_streaming"
      android:title="@string/realtime_sessions_streaming"
      android:summary="@string/realtime_sessions_streaming_summary"
      android:disableDependentsState="true"
      />

  <android.preference.CheckBoxPreference android:title="Contribute to CrowdMap"
                                         android:key="contribute_to_crowdmap"
                                         android:summary="Check to contribute your sessions to the CrowdMap by default"
          />

  <android.preference.CheckBoxPreference android:defaultValue="false"
                                           android:key="satellite"
                                           android:title="@string/satellite_view"
            />

    <android.preference.EditTextPreference android:defaultValue="100"
                                           android:numeric="integer"
                                           android:key="calibration"
                                           android:title="@string/calibration"
                                           android:summary="@string/calibration_summary"
            />
    <android.preference.EditTextPreference android:defaultValue="0"
                                           android:numeric="signed"
                                           android:key="offset_60_db"
                                           android:title="@string/offset_60_db"
                                           android:summary="@string/offset_60_db_summary"
            />
    <android.preference.CheckBoxPreference android:defaultValue="false"
                                           android:key="sound_level_measurementless"
                                           android:title="@string/sound_level_measurementless"
                                           android:summary="@string/sound_level_measurementless_summary"
            />

    <android.preference.EditTextPreference android:defaultValue="10"
                                           android:numeric="integer"
                                           android:key="heat_map_density"
                                           android:title="@string/heat_map_density"
                                           android:summary="@string/heat_map_density_summary"
            />
    <android.preference.CheckBoxPreference android:defaultValue="false"
                                           android:key="keep_screen_on"
                                           android:title="@string/keep_screen_on"
            />

    <android.preference.Preference android:key="backend_settings"
                                   android:title="@string/backend_settings"
                                   android:summary="@string/backend_settings_summary"
            />
    <android.preference.CheckBoxPreference android:defaultValue="false"
                                           android:key="sync_only_wifi"
                                           android:title="@string/sync_only_wifi"
            />
    <android.preference.CheckBoxPreference android:defaultValue="true"
                                           android:key="show_route"
                                           android:title="@string/show_route"
            />

  <android.preference.CheckBoxPreference android:defaultValue="false"
                                         android:key="show_graph_metadata"
                                         android:title="@string/show_graph_metadata"
          />

  <android.preference.Preference android:key="disable_maps"
                                         android:title="@string/disable_maps"
                                         android:defaultValue="false"

      />

</PreferenceScreen>
